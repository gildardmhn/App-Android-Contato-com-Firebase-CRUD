<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_nome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:padding="18dp"
                android:text="Nome: "
                android:textSize="20dp" />
            <TextView
                android:id="@+id/text_view_nome_print"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Jon Doe"
                android:textSize="20dp"
                android:padding="18dp"
                android:layout_toRightOf="@id/txt_nome"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_telefone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:padding="18dp"
                android:text="Telefone: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_view_telefone_print"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="88888"
                android:textSize="20dp"
                android:padding="18dp"
                android:layout_toRightOf="@id/txt_telefone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_endereco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:padding="18dp"
                android:text="EndereÃ§o: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_view_endereco_print"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rua rodrigues Junior"
                android:textSize="20dp"
                android:padding="18dp"
                android:layout_toRightOf="@id/txt_endereco"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_Fechar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnFechar"
            android:text="Fechar" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnApagar"
            android:text="Apagar" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>